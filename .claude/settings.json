{
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "WebSearch(*)",
      "TodoWrite(*)"
    ],
    "ask": [
      "Write(*)",
      "Edit(*)",
      "WebFetch(*)",
      "NotebookEdit(*)",
      "Bash(git :*)",
      "Bash(gh :*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/credentials.json)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Bash(rm -rf :*)",
      "Bash(rm -r :*)",
      "Bash(git push --force :*)",
      "Bash(git push -f :*)",
      "Bash(git reset --hard :*)",
      "Bash(git clean -f :*)",
      "Bash(git clean -fd :*)",
      "Bash(git checkout . :*)",
      "Bash(git restore . :*)",
      "Bash(git branch -D :*)",
      "Bash(gh repo delete :*)",
      "Bash(gh repo archive :*)",
      "Bash(gh secret :*)",
      "Bash(sudo :*)",
      "Bash(chmod 777 :*)",
      "Bash(chmod -R 777 :*)"
    ]
  },
  "cleanupPeriodDays": 30
}
